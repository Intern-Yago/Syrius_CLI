@charset "UTF-8";
html{
    overflow-x: hidden;
}

*{
    padding: 0;
    margin: 0;
}

nav ul{
    display: flex;
    flex-direction: row;
    list-style: none;
    justify-content: flex-end;
    align-items: center;
    margin-right: 50px;
    margin-top: 20px;
}
nav ul li{
    margin-right: 20px;
}
.arrow-top svg{
    user-select: none;
    width: 50px;
    height: 50px;
    position: fixed;
    right:40px;
    bottom: 40px;
    background: black;
    padding: 10px;
    border-radius: 30px;
    opacity: 0;
    transition: all .3s;
    z-index: 3;
    fill: white;
    
}
.arrow-top.active svg{
    opacity: 1;
    user-select: none;
}
main{
    margin: 0 20px;
}